#
# bspwm hotkeys
#

# Quit bspwm (ain't never tried it)
super + alt + Escape
	bspc quit

# Close selected window
super + w
	bspc window -c

# No idea
super + t
	bspc desktop -l next

# No idea
super + b
	bspc desktop -B

# Make window float/fill screen
super + {s,f}
	bspc window -t {floating,fullscreen}

# Switch to previous window/desktop
super + {grave,Tab}
	bspc {window,desktop} -f last

# Swap this window with last one used
super + apostrophe
	bspc window -s last

# No idea
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

# No idea
super + y
	bspc window -w last.manual

# Switch to the biggest window in desktop
super + m
	bspc window -s biggest

# Focus/select window
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Focus previous window on desktop
super + {_,shift + }c
	bspc window -f {next,prev}

# Rotate windows backward/forward
super + {comma,period}
	bspc desktop -C {backward,forward}

# Switch to previous/next desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# No idea
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# No idea - does something funky with urxvt
super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# Expand window
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# Shrink window
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

# No idea
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Switch/move window to specific desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# Craig's playin'
alt + tab
	bspc window -f older

#
# chromebook hotkeys
#

{@F1}
	xte 'keydown Page_Up' 'keyup Page_Up'

{@F2}
	xte 'keydown Page_Down' 'keyup Page_Down'

{@F3}
	xte 'keydown Control_L' 'key r' 'keyup Control_L'

@F4
	bspc desktop -f prev

@F5
	bspc desktop -f next

{@F6,@F7}
	xbacklight -{dec,inc} 10

{@F8}
	amixer set Master toggle

{@F9,@F10}
	amixer set Master 5{-,+} unmute

#
# wm independent hotkeys
#

# Spawn a terminal
super + Return
	urxvt

# Dmenu
super + space
	dmenu_run

super + g
	firefox

alt + z
	zathura

super + shift + Escape
	slimlock

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

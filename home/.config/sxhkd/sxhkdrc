#
# bspwm hotkeys
#

# Quit bspwm (ain't never tried it)
#super + alt + Escape
#	bspc quit

# Close selected window
alt + w
	bspc window -c

# No idea
super + t
	bspc desktop -l next

# Make window float/fill screen
ctrl + alt + {s,f}
	bspc window -t {floating,fullscreen}

# Switch to previous window/desktop
alt + {grave,Tab}
	bspc {window,desktop} -f last

# Swap this window with last one used
alt + apostrophe
	bspc window -s last

# No idea
alt + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

# No idea
alt + y
	bspc window -w last.manual

# Switch to the biggest window in desktop
alt + m
	bspc window -s biggest

# Focus/select window
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Focus previous window on desktop
alt + {_,shift + }c
	bspc window -f {next,prev}

# Rotate windows backward/forward
alt + {comma,period}
	bspc desktop -C {backward,forward}

# Switch to previous/next desktop
alt + bracket{left,right}
	bspc desktop -f {prev,next}

# No idea - does something funky with urxvt
alt + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# Expand window
ctrl + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# Shrink window
ctrl + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

# Switch/move window to specific desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

# Craig's playin'
alt + Tab
	bspc window -f older

#
# chromebook hotkeys
#

{@F1}
	xte 'keydown Page_Up' 'keyup Page_Up'

{@F2}
	xte 'keydown Page_Down' 'keyup Page_Down'

{@F3}
	xte 'keydown Control_L' 'key r' 'keyup Control_L'

@F4
	bspc desktop -f prev

@F5
	bspc desktop -f next

{@F6,@F7}
	xbacklight -{dec,inc} 10

{@F8}
	amixer set Master toggle

{@F9,@F10}
	amixer set Master 5{-,+} unmute

#
# wm independent hotkeys
#

# Spawn a terminal
ctrl + alt + Return
	urxvt

# Dmenu
alt + space
	dmenu_run

# Weeb
alt + g
	firefox

alt + shift + g
	vimb

# Pdf viewin'
alt + z
	zathura

# Netflix
alt + n
	google-chrome-stable --app=http://netflix.com

# Conky
alt + space
	/home/craig/.scripts/conky

# Lock
alt + shift + Escape
	slimlock

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

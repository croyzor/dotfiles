#
# bspwm hotkeys
#
# Quit bspwm (ain't never tried it)
#super + alt + Escape
#	bspc quit

# Close selected window
alt + q
	bspc node -c

# No idea
super + t
	bspc desktop -l next

# Make window float/fill screen
ctrl + alt + {s,f}
	bspc node -t {floating,fullscreen}

# Switch to previous window/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# Swap this window with last one used
alt + apostrophe
	bspc node -s last

# No idea
alt + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

# No idea
alt + y
	bspc node -w last.manual

# Switch to the biggest window in desktop
alt + m
	bspc node -s biggest

# Focus/select window
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus previous window on desktop
alt + {_,shift + }c
	bspc node -f {next,prev}

# Rotate windows backward/forward
alt + {comma,period}
	bspc desktop -C {backward,forward}

# Switch to previous/next desktop
alt + bracket{west,east}
	bspc desktop -f {prev,next}

# No idea - does something funky with urxvt
alt + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

# Expand window
ctrl + alt + {h,j,k,l}
	bspc node -e {west -10,south +10,north -10,east +10}

# Shrink window
ctrl + alt + shift + {h,j,k,l}
	bspc node -e {east -10,north +10,south -10,west +10}

# Cycle desktops
alt + {bracketleft,bracketright}
	bspc desktop -f {prev,next}

# Switch/move window to specific desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

# Craig's playin'
alt + Tab
	bspc window -f older

#
# chromebook hotkeys
#

{@F1}
	bspc desktop -f prev

{@F2}
	bspc desktop -f next

{@F3}
	xte 'keydown Control_L' 'key r' 'keyup Control_L'

@F4
	bspc desktop -f prev

@F5
	bspc desktop -f next

{@F6,@F7}
	xbacklight -{dec,inc} 10

{@F8}
	amixer set Master toggle

{@F9,@F10}
	amixer set Master 5{-,+} unmute

#
# wm independent hotkeys
#

# Spawn a terminal
ctrl + alt + Return
	urxvt

# Dmenu
alt + space
	dmenu_run

# Weeb
alt + g
	firefox

alt + shift + g
	vimb

# Pdf viewin'
alt + z
	zathura

# Netflix
alt + n
	google-chrome-stable --app=http://netflix.com

# Conky
alt + space
	/home/craig/.scripts/conky

# Lock
alt + shift + Escape
	slimlock

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
